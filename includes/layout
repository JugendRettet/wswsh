# Page content
function page_head {
	print '<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="author" content="John Foo" />'
	(( CSSV == 1 )) && print "\t<link rel=\"stylesheet\" type=\"text/css\" href=\"/${CSSF}\" />"
	[[ -n $WTIT ]] && print "\t<title>${WTIT}${ATIT:+ | }${ATIT}</title>"
	print '</head>
<body>
	<div>FOO</div>'
}

function page_foot {
	print '\t<!-- Page generated by wswsh 1.2 / '"$(print ${SHELL##*/})"' - '"$(LC_ALL=C date)"' -->
</body>
</html>'
}

function gen_site_xml {
	print '<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">

	<title>'"${WTIT}"'</title>
	<link href="http://'${WURL}'/"/>
	<link type="application/atom+xml" rel="self" href="http://'${WURL}'/'${RSSDIR}'atom.xml"/>
	<updated>'"${RDAT}"'</updated>
	<author>
		<name>My_awesome_name</name>
	</author>
	<id>http://'"${WURL}"'/</id>
'
}

function xml_content {
	print '\t<entry>
		<title>'"${ATIT}"'</title>
		<link href="http://'${WURL}'/'${RSSTNOEXT}'.html"/>
		<id>http://'"${WURL}"'/'"${RSSTNOEXT}"'.html</id>
		<updated>'"${RDADAT}"'</updated>
		<summary>'"${RSSDES}"'</summary>
	</entry>
'
}
